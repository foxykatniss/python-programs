"""Welcome to the Number Guess game"""
print "Welcome to the Number Guess Game! Two 6-sided dice will be rolled. You just need to guess what they'll add up to!"

print "Ready, Set, Go!"

from random import randint
from time import sleep
def get_user_guess():
  guess = int(raw_input("Guess a number: "))
  return guess
def roll_dice(number_of_sides):
  first_roll = randint(1, number_of_sides)
  second_roll = randint(1, number_of_sides)
  max_val = number_of_sides * 2
  print "The maximum possible value: %d" % max_val
  guess = get_user_guess()
  if guess > max_val:
  	print "No guessing higher than the maximum possible value!"
  else:
    print "Rolling..."
    sleep(2)
    print "The first roll is: %d" % first_roll
    sleep(1)
    print "The second roll is: %d" % second_roll
    sleep(1)
    total_roll = first_roll + second_roll
    print "Result..."
    sleep(1)
    if guess == total_roll:
      print "You must be royalty coz I'm bowing down to your excellence!"
    else:
      print "You lost to a computer. You are now trapped inside the Matrix forever!"
roll_dice(6)
